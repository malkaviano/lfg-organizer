generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QueuedPlayer {
  id String   @id @db.Uuid() @default(uuid())

  level Int

  roles String[] @db.VarChar(20)

  dungeons String[] @db.VarChar(20)

  queuedAt String @db.VarChar(20)

  status String @db.VarChar(20)

  playingWith String[] @db.Uuid()

  groupId String? @db.Uuid()
}

model PlayerGroup {
  id String   @id @db.Uuid() @default(uuid())

  dungeon String @db.VarChar(20)
  
  tankId String @db.Uuid() 
  
  healerId String @db.Uuid()
  
  damage1Id String @db.Uuid()

  damage2Id String @db.Uuid()

  damage3Id String @db.Uuid()  
  
  sentAt String? @db.VarChar(20)
}