generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model QueuedPlayer {
  id String   @id @db.Uuid() @default(uuid())

  level Int

  roles String[] @db.VarChar(20)

  dungeons String[] @db.VarChar(20)

  queuedAt String @db.VarChar(20)

  status String @db.VarChar(20)

  playingWith String[] @db.Uuid()

  groupId String? @db.VarChar(20)

  groupedAt String? @db.VarChar(20)

  groupRole String? @db.VarChar(20)
}